<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/test_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_3d_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#999999"
                android:gravity="center"
                android:text="3D"
                android:textSize="16sp" />
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/message"
            android:text="https://nbc.vtnbo.com/nbc/msg/image/pro/17517100642845371.jpg" />



        <test.app.ui.view.text.ExpansionRl
            android:id="@+id/tv_test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <test.app.ui.view.down.CodeEditLayout
            android:id="@+id/code_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/test_iv"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/test_2_iv"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/chat_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/default_image" />


        <ImageView
            android:id="@+id/chat_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/default_image" />


        <test.app.ui.view.chat.ChatLeftText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="123\njljlkjlkjlk"
            android:textColor="#333333"
            android:textSize="14sp" />

        <test.app.ui.view.chat.ChatRightText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="123\njljlkjlkjlk"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/delineate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="划线" />

        <Button
            android:id="@+id/open_app_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开第三方应用" />

        <Button
            android:id="@+id/canvas_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="画布" />

        <Button
            android:id="@+id/lang_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多语言" />

        <Button
            android:id="@+id/dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹窗一个弹窗" />

        <Button
            android:id="@+id/xs_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示一个view" />

        <Button
            android:id="@+id/yc_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐藏一个view" />


        <Button
            android:id="@+id/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到主页" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录页" />

        <Button
            android:id="@+id/image_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取照片" />


        <Button
            android:id="@+id/yp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音频" />

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="会话" />

        <Button
            android:id="@+id/card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卡片" />

        <Button
            android:id="@+id/iamge_9_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9张图" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手势关闭activity" />

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件扫描" />

        <Button
            android:id="@+id/jtb_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剪贴板权限获取" />
        <Button
            android:id="@+id/ys_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="元素动画" />
    </LinearLayout>
</ScrollView>