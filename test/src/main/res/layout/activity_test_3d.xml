<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <test.app.ui.view.view3d.Text3DView
        android:layout_width="180dp"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:background="#fff098"
        android:visibility="gone"
        />

    <test.app.ui.view.banner.TextBannerView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#fff098"
        />
    <EditText
        android:layout_alignParentBottom="true"
        android:id="@+id/chat_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/chat_more_iv"
        android:layout_toRightOf="@+id/chat_type_iv"
        android:background="@drawable/chat_et_bg"
        android:imeOptions="actionSend"
        android:minHeight="34dp"
        android:padding="4dp"
        android:textColor="#333333"
        android:textSize="14sp"
        />
</RelativeLayout>