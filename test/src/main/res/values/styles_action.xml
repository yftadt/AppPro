<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff7db2fd</item>
        <item name="colorPrimaryDark">#ff7db2fd</item>
        <item name="colorAccent">#999999</item>
        <item name="android:windowAnimationStyle">@style/anim_activity</item>
    </style>
    <style name="NoActionBarAndAnim" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff7db2fd</item>
        <item name="colorPrimaryDark">#ff7db2fd</item>
        <item name="colorAccent">#999999</item>
    </style>
    <!--动画-->
    <style name="anim_activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out_anim</item>
    </style>

    <style name="TransparentActivity" parent="NoActionBar">
        <item name="android:windowBackground">@color/transparent50</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
