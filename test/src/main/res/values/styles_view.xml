<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LineView">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e5e5e5</item>
    </style>
    <!-- 竖线 -->
    <style name="VerticalView">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#e5e5e5</item>
    </style>
    <!-- list -->
    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">#0000</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
    </style>
    <!--小红点-->
    <style name="countTv">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@drawable/tab_circle_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!--会话-->
    <style name="chat_text_date_style">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
