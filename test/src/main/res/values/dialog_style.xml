<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/color00</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 等待对话框 -->
    <style name="WaitingDialog" parent="CommonDialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>


    <!-- 等待对话框 大小跟随布局（实际情况）-->
    <style name="dialog_transparent" parent="CommonDialog">
        <item name="android:windowBackground">#0000</item>
    </style>
    <!-- 白色背景，大小跟随布局（实际情况）-->
    <style name="dialog_white" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <!-- 全屏dialog（宽度和高度全屏）-->
    <style name="dialog_transparent_fullscreen">
        <item name="android:windowBackground">#0000</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
